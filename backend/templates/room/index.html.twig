{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Room_no</th>
                <th>Floor_no</th>
                <th>Size</th>
                <th>Beds</th>
                <th>Balcony</th>
                <th>Breakfast</th>
                <th>Pets_allowed</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.roomNo }}</td>
                <td>{{ room.floorNo }}</td>
                <td>{{ room.size }}</td>
                <td>{{ room.beds }}</td>
                <td>{{ room.balcony ? 'Yes' : 'No' }}</td>
                <td>{{ room.breakfast ? 'Yes' : 'No' }}</td>
                <td>{{ room.petsAllowed ? 'Yes' : 'No' }}</td>
                <td>{{ room.price }}</td>
                <td>
                    <a href="{{ path('app_room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_room_new') }}">Create new</a>
{% endblock %}
