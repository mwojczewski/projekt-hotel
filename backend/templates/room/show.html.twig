{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Room_no</th>
                <td>{{ room.roomNo }}</td>
            </tr>
            <tr>
                <th>Floor_no</th>
                <td>{{ room.floorNo }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ room.size }}</td>
            </tr>
            <tr>
                <th>Beds</th>
                <td>{{ room.beds }}</td>
            </tr>
            <tr>
                <th>Balcony</th>
                <td>{{ room.balcony ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Breakfast</th>
                <td>{{ room.breakfast ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Pets_allowed</th>
                <td>{{ room.petsAllowed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ room.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_room_index') }}">back to list</a>

    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
